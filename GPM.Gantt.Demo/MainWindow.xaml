<Window x:Class="GPM.Gantt.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gantt="clr-namespace:GPM.Gantt;assembly=GPM.Gantt"
        Title="Gantt Chart Demo" Height="600" Width="1000">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="ExitApplication"/>
            </MenuItem>
            <MenuItem Header="Demos">
                <MenuItem Header="Alternating Row Colors" Click="RunAlternatingRowDemo"/>
                <MenuItem Header="Custom Task Shapes" Click="RunCustomShapesDemo"/>
                <MenuItem Header="Time Scale Customization" Click="RunTimeScaleDemo"/>
                <MenuItem Header="Interactive Features" Click="RunInteractiveDemo"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Theme Selection Controls -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
                <TextBlock Text="Select Theme:" FontWeight="Bold"/>
                <ComboBox x:Name="ThemeComboBox" 
                           Width="150"
                           SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Default"/>
                    <ComboBoxItem Content="Dark"/>
                    <ComboBoxItem Content="Light"/>
                    <ComboBoxItem Content="Modern"/>
                    <ComboBoxItem Content="Custom"/>
                </ComboBox>
                
                <TextBlock Text="Row Color:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="RowColorComboBox"
                           Width="150"
                           SelectionChanged="RowColorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Light Blue" Tag="#E6F7FF"/>
                    <ComboBoxItem Content="Light Green" Tag="#F0FFF0"/>
                    <ComboBoxItem Content="Light Gray" Tag="#F5F5F5"/>
                    <ComboBoxItem Content="Light Orange" Tag="#FFF9E6"/>
                </ComboBox>
                
                <TextBlock Text="Primary Color:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="PrimaryColorComboBox"
                           Width="150"
                           SelectionChanged="PrimaryColorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Blue" Tag="#2196F3"/>
                    <ComboBoxItem Content="Green" Tag="#4CAF50"/>
                    <ComboBoxItem Content="Orange" Tag="#FF9800"/>
                    <ComboBoxItem Content="Purple" Tag="#9C27B0"/>
                </ComboBox>
                
                <TextBlock Text="Accent Color:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="AccentColorComboBox"
                           Width="150"
                           SelectionChanged="AccentColorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Orange" Tag="#FF9800"/>
                    <ComboBoxItem Content="Red" Tag="#F44336"/>
                    <ComboBoxItem Content="Blue" Tag="#2196F3"/>
                    <ComboBoxItem Content="Green" Tag="#4CAF50"/>
                </ComboBox>
            </StackPanel>
            
            <!-- Gantt Chart -->
            <gantt:GanttContainer x:Name="Gantt"
                                 Grid.Column="1"
                                 StartTime="{Binding StartDate}"
                                 EndTime="{Binding EndDate}"
                                 TimeUnit="Day"
                                 TaskCount="10"
                                 TaskRowHeight="30"
                                 ShowGridCells="False"/>
            
            <!-- Status Bar -->
            <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                <StatusBarItem Content="{Binding ElementName=ThemeComboBox, Path=SelectedItem.Content, StringFormat='Theme: {0}'}"/>
                <StatusBarItem Content="{Binding ElementName=RowColorComboBox, Path=SelectedItem.Tag, StringFormat='Row Color: {0}'}"/>
                <StatusBarItem Content="{Binding ElementName=PrimaryColorComboBox, Path=SelectedItem.Tag, StringFormat='Primary Color: {0}'}"/>
                <StatusBarItem Content="{Binding ElementName=AccentColorComboBox, Path=SelectedItem.Tag, StringFormat='Accent Color: {0}'}"/>
            </StatusBar>
        </Grid>
    </DockPanel>
</Window>
