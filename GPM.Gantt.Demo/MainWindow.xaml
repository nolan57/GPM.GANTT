<Window x:Class="GPM.Gantt.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gantt="clr-namespace:GPM.Gantt;assembly=GPM.Gantt"
        Title="Gantt Chart Demo" Height="600" Width="1000">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="ExitApplication"/>
            </MenuItem>
            <MenuItem Header="Demos">
                <MenuItem Header="Alternating Row Colors" Click="RunAlternatingRowDemo"/>
                <MenuItem Header="Custom Task Shapes" Click="RunCustomShapesDemo"/>
                <MenuItem Header="Time Scale Customization" Click="RunTimeScaleDemo"/>
                <MenuItem Header="Interactive Features" Click="RunInteractiveDemo"/>
                <MenuItem Header="Task Dependencies" Click="RunDependencyDemo"/>
                <MenuItem Header="Export Features" Click="RunExportDemo"/>
                <MenuItem Header="Calendar System" Click="RunCalendarDemo"/>
                <MenuItem Header="Project Templates" Click="RunTemplateDemo"/>
                <Separator/>
                <MenuItem Header="REST API Integration" Click="RunRestApiDemo"/>
            </MenuItem>
            <MenuItem Header="API">
                <MenuItem Header="Test Connection" Click="TestApiConnection"/>
                <MenuItem Header="Set Credentials" Click="SetApiCredentials"/>
                <Separator/>
                <MenuItem Header="Synchronize" Click="SynchronizeWithApi"/>
                <MenuItem Header="Upload Project" Click="UploadCurrentProject"/>
            </MenuItem>
            <MenuItem Header="Export">
                <MenuItem Header="Export as PNG" Click="ExportAsPng"/>
                <MenuItem Header="Export as PDF" Click="ExportAsPdf"/>
                <MenuItem Header="Export as JPEG" Click="ExportAsJpeg"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Theme Selection Controls -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
                <TextBlock Text="Select Theme:" FontWeight="Bold"/>
                <ComboBox x:Name="ThemeComboBox" 
                           Width="150"
                           SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Default"/>
                    <ComboBoxItem Content="Dark"/>
                    <ComboBoxItem Content="Light"/>
                    <ComboBoxItem Content="Modern"/>
                    <ComboBoxItem Content="Custom"/>
                </ComboBox>
                
                <TextBlock Text="Row Color:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="RowColorComboBox"
                           Width="150"
                           SelectionChanged="RowColorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Light Blue" Tag="#E6F7FF"/>
                    <ComboBoxItem Content="Light Green" Tag="#F0FFF0"/>
                    <ComboBoxItem Content="Light Gray" Tag="#F5F5F5"/>
                    <ComboBoxItem Content="Light Orange" Tag="#FFF9E6"/>
                </ComboBox>
                
                <TextBlock Text="Primary Color:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="PrimaryColorComboBox"
                           Width="150"
                           SelectionChanged="PrimaryColorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Blue" Tag="#2196F3"/>
                    <ComboBoxItem Content="Green" Tag="#4CAF50"/>
                    <ComboBoxItem Content="Orange" Tag="#FF9800"/>
                    <ComboBoxItem Content="Purple" Tag="#9C27B0"/>
                </ComboBox>
                
                <TextBlock Text="Accent Color:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="AccentColorComboBox"
                           Width="150"
                           SelectionChanged="AccentColorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Orange" Tag="#FF9800"/>
                    <ComboBoxItem Content="Red" Tag="#F44336"/>
                    <ComboBoxItem Content="Blue" Tag="#2196F3"/>
                    <ComboBoxItem Content="Green" Tag="#4CAF50"/>
                </ComboBox>
                
                <CheckBox x:Name="ShowDependenciesCheckBox" 
                          Content="Show Dependencies"
                          Margin="0,15,0,5"
                          IsChecked="True"
                          Checked="ShowDependenciesCheckBox_Changed"
                          Unchecked="ShowDependenciesCheckBox_Changed"/>
                          
                <CheckBox x:Name="HighlightCriticalPathCheckBox" 
                          Content="Highlight Critical Path"
                          Margin="0,5,0,5"
                          IsChecked="True"
                          Checked="HighlightCriticalPathCheckBox_Changed"
                          Unchecked="HighlightCriticalPathCheckBox_Changed"/>
                          
                <Button x:Name="AddDependencyButton"
                        Content="Add Sample Dependencies"
                        Margin="0,10,0,5"
                        Click="AddSampleDependencies"/>
                        
                <Button x:Name="CalculateCriticalPathButton"
                        Content="Calculate Critical Path"
                        Margin="0,5,0,5"
                        Click="CalculateCriticalPath"/>
                        
                <TextBlock Text="Templates:" FontWeight="Bold" Margin="0,15,0,5"/>
                <ComboBox x:Name="TemplateComboBox"
                          Width="150"
                          Margin="0,0,0,5"
                          SelectionChanged="TemplateComboBox_SelectionChanged">
                    <ComboBoxItem Content="Software Development" Tag="software"/>
                    <ComboBoxItem Content="Marketing Campaign" Tag="marketing"/>
                    <ComboBoxItem Content="Construction Project" Tag="construction"/>
                </ComboBox>
                
                <Button x:Name="ApplyTemplateButton"
                        Content="Apply Template"
                        Margin="0,5,0,5"
                        Click="ApplyTemplate"/>
                        
                <TextBlock Text="Calendar:" FontWeight="Bold" Margin="0,15,0,5"/>
                <ComboBox x:Name="CalendarTypeComboBox"
                          Width="150"
                          Margin="0,0,0,5"
                          SelectionChanged="CalendarTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Standard" Tag="Standard"/>
                    <ComboBoxItem Content="Night Shift" Tag="NightShift"/>
                    <ComboBoxItem Content="24 Hour" Tag="TwentyFourHour"/>
                </ComboBox>
                
                <Button x:Name="ShowWorkingDaysButton"
                        Content="Show Working Days"
                        Margin="0,5,0,10"
                        Click="ShowWorkingDays"/>
            </StackPanel>
            
            <!-- Gantt Chart -->
            <gantt:GanttContainer x:Name="Gantt"
                                 Grid.Column="1"
                                 TimeUnit="Day"
                                 TaskCount="10"
                                 TaskRowHeight="30" HeaderRowHeight="30"
                                 ShowGridCells="True"
                                 MinWidth="400" MinHeight="300"/>
            
            <!-- Status Bar -->
            <!-- <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                <StatusBarItem Content="{Binding ElementName=ThemeComboBox, Path=SelectedItem.Content, StringFormat='Theme: {0}'}"/>
                <StatusBarItem Content="{Binding ElementName=RowColorComboBox, Path=SelectedItem.Tag, StringFormat='Row Color: {0}'}"/>
                <StatusBarItem Content="{Binding ElementName=PrimaryColorComboBox, Path=SelectedItem.Tag, StringFormat='Primary Color: {0}'}"/>
                <StatusBarItem Content="{Binding ElementName=AccentColorComboBox, Path=SelectedItem.Tag, StringFormat='Accent Color: {0}'}"/>
            </StatusBar> -->
        </Grid>
    </DockPanel>
</Window>
